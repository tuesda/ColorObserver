<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <EditText
            android:text="00ff0000"
            android:background="#20000000"
            android:id="@+id/start_top"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <EditText
            android:text="ff00ff00"
            android:layout_marginTop="40dp"
            android:background="#20000000"
            android:id="@+id/start_bottom"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <EditText
            android:text="ff00ff00"
            android:background="#20000000"
            android:id="@+id/end_top"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/start_top"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <EditText
            android:text="000000ff"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/start_bottom"
            android:layout_marginLeft="20dp"
            android:background="#20000000"
            android:id="@+id/end_bottom"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <EditText
            android:text="323"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/end_top"
            android:background="#2000ff00"
            android:id="@+id/steps"
            android:layout_width="80dp"
            android:layout_height="30dp" />
        <Button
            android:background="#20000000"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/end_bottom"
            android:text="show"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:id="@+id/show_color"
             />

    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <View
        android:id="@+id/back"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:background="#40000000"
        android:textColor="#ffffffff"
        android:id="@+id/display"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
